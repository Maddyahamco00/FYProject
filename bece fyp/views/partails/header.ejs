<header class="admin-header">
    <div class="header-left">
        <button class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>
        <div class="logo-container">
            <img src="/images/logo.svg" alt="Taraba BECE Logo" class="header-logo">
            <span class="system-name">Taraba BECE Admin</span>
        </div>
    </div>
    
    <div class="header-right">
        <div class="notification-bell">
            <i class="fas fa-bell"></i>
            <span class="notification-count">3</span>
        </div>
        
        <div class="user-profile">
            <img src="<%= user.photo || '/images/default-avatar.svg' %>" alt="User Profile" class="profile-img">
            <div class="profile-info">
                <span class="username"><%= user.username %></span>
                <span class="user-role"><%= user.role %></span>
            </div>
            <i class="fas fa-chevron-down dropdown-toggle"></i>
            
            <div class="profile-dropdown">
                <a href="/admin/profile" class="dropdown-item">
                    <i class="fas fa-user"></i> My Profile
                </a>
                <a href="/auth/logout" class="dropdown-item">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </div>
</header>
