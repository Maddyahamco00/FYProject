<%- include('../partials/head', { title: 'Results Management', stylesheet: '/css/results.css' }) %>

<body class="admin-layout">
    <%- include('../partials/header') %>
    <%- include('../partials/sidebar', { currentPage: 'results' }) %>
    
    <main class="main-content">
        <div class="page-header">
            <h1>Results Management</h1>
            <div class="header-actions">
                <a href="/admin/results/enter" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Enter Results
                </a>
                <button class="btn btn-secondary">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
        
        <div class="content-card">
            <div class="card-header">
                <h2>Examination Results</h2>
                <div class="result-filters">
                    <div class="filter-group">
                        <label>Academic Year:</label>
                        <select class="form-control">
                            <option>2023/2024</option>
                            <option>2022/2023</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label>Term:</label>
                        <select class="form-control">
                            <option>All Terms</option>
                            <option>First Term</option>
                            <option>Second Term</option>
                            <option>Third Term</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label>Class:</label>
                        <select class="form-control">
                            <option>All Classes</option>
                            <option>JSS 1</option>
                            <option>JSS 2</option>
                            <option>JSS 3</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table class="results-table">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Reg. No.</th>
                            <th>Class</th>
                            <th>Subject</th>
                            <th>Score</th>
                            <th>Term</th>
                            <th>Year</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% results.forEach(result => { %>
                            <tr>
                                <td><%= result.student_name %></td>
                                <td><%= result.reg_number %></td>
                                <td><%= result.class_level %></td>
                                <td><%= result.subject_name %></td>
                                <td><%= result.score %></td>
                                <td><%= result.term %></td>
                                <td><%= result.academic_year %></td>
                                <td class="action-cell">
                                    <a href="/admin/results/edit/<%= result.id %>" class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button class="action-btn delete-btn" data-id="<%= result.id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="table-footer">
                <div class="pagination-info">
                    Showing 1 to <%= results.length %> of <%= results.length %> entries
                </div>
                <div class="pagination-controls">
                    <button class="pagination-btn" disabled>
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <button class="pagination-btn active">1</button>
                    <button class="pagination-btn">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
    
    <script src="/js/main.js"></script>
</body>