<%- include('../partials/head', {title: 'Dashboard', css: 'dashboard.css'}) %>

<body>
    <div class="app-container">
        <%- include('../partials/sidebar') %>
        
        <div class="main-content">
            <%- include('../partials/header') %>
            
            <div class="page-header">
                <h1>Dashboard Overview</h1>
                <p>Welcome back, <%= user.username %></p>
            </div>
            
            <div class="stats-grid">
                <div class="stat-card primary">
                    <div class="stat-icon">
                        <i class="icon-users"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= counts.students %></h3>
                        <p>Total Students</p>
                    </div>
                    <div class="stat-bg"></div>
                </div>
                
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="icon-school"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= counts.schools %></h3>
                        <p>Registered Schools</p>
                    </div>
                    <div class="stat-bg"></div>
                </div>
                
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="icon-book"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= counts.subjects %></h3>
                        <p>Examination Subjects</p>
                    </div>
                    <div class="stat-bg"></div>
                </div>
                
                <div class="stat-card danger">
                    <div class="stat-icon">
                        <i class="icon-results"></i>
                    </div>
                    <div class="stat-info">
                        <h3><%= counts.results %></h3>
                        <p>Results Entered</p>
                    </div>
                    <div class="stat-bg"></div>
                </div>
            </div>
            
            <div class="content-row">
                <div class="chart-card">
                    <div class="card-header">
                        <h3>Recent Activity</h3>
                        <select class="time-select">
                            <option>Last 7 days</option>
                            <option>Last 30 days</option>
                        </select>
                    </div>
                    <div class="chart-container">
                        <!-- Chart would be rendered here with Chart.js -->
                        <canvas id="activityChart"></canvas>
                    </div>
                </div>
                
                <div class="quick-actions">
                    <h3>Quick Actions</h3>
                    <div class="action-buttons">
                        <a href="/admin/students/add" class="action-btn">
                            <i class="icon-add-user"></i>
                            <span>Add Student</span>
                        </a>
                        <a href="/admin/results/enter" class="action-btn">
                            <i class="icon-enter-result"></i>
                            <span>Enter Results</span>
                        </a>
                        <a href="/admin/schools/add" class="action-btn">
                            <i class="icon-add-school"></i>
                            <span>Add School</span>
                        </a>
                        <a href="/admin/reports" class="action-btn">
                            <i class="icon-report"></i>
                            <span>Generate Report</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/main.js"></script>
</body>

